/* pages/shake/shake.wxss */
.container {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  box-sizing: border-box;
}

.result-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.result-name {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin: 40rpx 0 20rpx;
}

.result-category {
  display: block;
  font-size: 28rpx;
  color: #999;
  padding: 10rpx 30rpx;
  background: #f5f5f5;
  border-radius: 30rpx;
}

.feedback-buttons {
  display: flex;
  gap: 24rpx;
  margin-top: 60rpx;
}

.feedback-buttons text {
  margin-left: 8rpx;
}

.shake-hint {
  text-align: center;
}

.hint-text {
  display: block;
  font-size: 32rpx;
  color: #666;
  margin: 40rpx 0;
}
