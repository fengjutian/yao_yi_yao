.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
}

/* 顶部操作区 */
.header-actions {
  padding: 20rpx 0;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  background: #fff;
  border-radius: 16rpx;
  text-align: center;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #999;
}

/* 单元格样式 */
.cell-photo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.item-photo {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.cell-note {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  padding-left: 20rpx;
}

.info-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.info-category {
  font-size: 28rpx;
  color: #0052D9;
  background: rgba(0, 82, 217, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.info-address {
  font-size: 24rpx;
  color: #666;
}

.cell-actions {
  display: flex;
  gap: 16rpx;
}

.action-icon {
  padding: 8rpx;
  border-radius: 8rpx;
  transition: all 0.2s;
}

.action-icon:active {
  opacity: 0.6;
  transform: scale(0.95);
}

/* 模态框内容 */
.modal-content {
  padding: 20rpx 0 0;
  max-height: 800rpx;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.form-group {
  margin-top: 24rpx;
}

.form-group .label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.photo-upload {
  display: flex;
  gap: 20rpx;
}

.photo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  object-fit: cover;
}

.photo-placeholder {
  width: 160rpx;
  height: 160rpx;
  background: #f8f8f8;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
  transition: all 0.2s;
}

.photo-placeholder:active {
  background: #e8e8e8;
  border-color: #0052D9;
}

.upload-text {
  font-size: 20rpx;
  margin-top: 8rpx;
}
