.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
}

/* 顶部操作区 */
.header-actions {
  padding: 10rpx 0;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  background: #fff;
  border-radius: 16rpx;
  text-align: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #999;
}

/* 店铺列表 */
.store-list {
  width: 100%;
  margin-top: 20rpx;
}

.list-title {
  font-size: 28rpx;
  color: #999;
  padding: 0 10rpx 16rpx;
  font-weight: 500;
}

/* 店铺卡片 */
.store-card {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.store-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.store-card::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: linear-gradient(180deg, #0052D9 0%, #0072FF 100%);
  border-radius: 16rpx 0 0 16rpx;
}

/* 卡片照片 */
.card-photo {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
  overflow: hidden;
  margin-right: 20rpx;
  flex-shrink: 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.store-photo {
  width: 100%;
  height: 100%;
}

.no-photo {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #f5f5f5 0%, #e8e8e8 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 卡片内容 */
.card-content {
  flex: 1;
  min-width: 0;
  padding-right: 20rpx;
}

.store-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.store-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-wrap: wrap;
}

.store-address {
  font-size: 24rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 卡片操作 */
.card-actions {
  display: flex;
  gap: 12rpx;
  flex-shrink: 0;
}

.action-btn {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  border-radius: 12rpx;
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.9);
  opacity: 0.7;
}

/* 模态框内容 */
.modal-content {
  padding: 20rpx 0 0;
  max-height: 800rpx;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.form-group {
  margin-top: 24rpx;
}

.form-group .label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.photo-upload {
  display: flex;
  gap: 20rpx;
}

.photo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  object-fit: cover;
}

.photo-placeholder {
  width: 160rpx;
  height: 160rpx;
  background: #f8f8f8;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
  transition: all 0.2s;
}

.photo-placeholder:active {
  background: #e8e8e8;
  border-color: #0052D9;
}

.upload-text {
  font-size: 20rpx;
  margin-top: 8rpx;
}
