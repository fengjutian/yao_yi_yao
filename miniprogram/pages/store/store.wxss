.container {
  padding: 30rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 表单卡片 */
.form-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.picker {
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #666;
}

/* 照片上传 */
.photo-area {
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
}

.photo {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  object-fit: cover;
}

.photo-placeholder {
  width: 200rpx;
  height: 200rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #ddd;
}

.plus {
  font-size: 80rpx;
  color: #999;
  line-height: 1;
  margin-bottom: 10rpx;
}

.photo-placeholder .text {
  font-size: 24rpx;
  color: #999;
}

/* 按钮组 */
.form-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.btn-primary {
  flex: 1;
  background: #0052D9;
  color: #fff;
  border: none;
}

.btn-secondary {
  flex: 1;
  background: #fff;
  color: #666;
  border: 1rpx solid #ddd;
}

/* 列表区域 */
.list-section {
  margin-top: 20rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.empty {
  text-align: center;
  padding: 80rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  gap: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.item-photo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.item-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.item-category {
  font-size: 24rpx;
  color: #0052D9;
  background: rgba(0, 82, 217, 0.1);
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  align-self: flex-start;
}

.item-address {
  font-size: 24rpx;
  color: #666;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.item-actions {
  display: flex;
  gap: 12rpx;
  margin-top: 10rpx;
}

.btn-edit {
  background: #0052D9;
  color: #fff;
  border: none;
}

.btn-delete {
  background: #fff;
  color: #ff4d4f;
  border: 1rpx solid #ff4d4f;
}
